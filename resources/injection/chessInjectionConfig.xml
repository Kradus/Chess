<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	default-lazy-init="true">

	<context:component-scan base-package="controller.minFigure" />
	<context:component-scan base-package="controller.moveHandler" />
	<context:component-scan base-package="controller.hitKing" />
	<context:component-scan base-package="view.commands" />

	<bean id="commandReader" class="view.CommandReader" />
	<bean id="gameFieldPrinter" class="view.GameFieldPrinter">
		<constructor-arg ref="game" />
	</bean>

	<bean id="figureHolder" class="model.figure.FigureHolder" />
	<bean id="game" class="model.Game" />
	<bean id="gameField" class="model.GameField" />

	<bean id="controller" class="controller.Controller">
		<constructor-arg ref="figureMoveHandler" />
		<constructor-arg ref="checkChecker" />
		<constructor-arg ref="figureHolder" />
		<constructor-arg ref="gameFieldFactory" />
		<constructor-arg ref="game" />
	</bean>
	<bean id="checkChecker" class="controller.CheckChecker">
		<constructor-arg ref="figureHitKingChecker" />
		<constructor-arg ref="game" />
	</bean>
	<bean id="figureMoveHandler" class="controller.FigureMoveHandler" />
	<bean id="figureHitKingChecker" class="controller.FigureHitKingChecker" />
	<bean id="gameFieldFactory" class="controller.GameFieldFactory">
		<constructor-arg ref="figureHolder" />
	</bean>
</beans>